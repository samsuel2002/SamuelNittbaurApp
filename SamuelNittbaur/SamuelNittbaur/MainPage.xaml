<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamuelNittbaur.MainPage">

        <StackLayout>
            <Frame BackgroundColor="#2196F3" CornerRadius="0">
            <Grid HeightRequest="400">
                <Image Source="StartPic.jpg" Margin="-150" HeightRequest="500" WidthRequest="600"></Image>
                <Frame BackgroundColor="#B7FFFFFF" HeightRequest="50" Margin="20,100,20,100" CornerRadius="20" >
                    <StackLayout VerticalOptions="Center">
                        <Label Text="Samuel Nittbaur" TextColor="Black" FontSize="35"  HorizontalOptions="Center" Margin="0,10,0,0" FontAttributes="Bold"></Label>
                    </StackLayout>
                </Frame>
            </Grid>
              
            </Frame>
        <Button x:Name="Explore_Btn" Clicked="Explore_Btn_Clicked" Margin="30,100,30,0" Text="Explore" TextColor="White" FontAttributes="Bold" BackgroundColor="#2268bd">

        </Button>
        <Label Text="Developed and Designed by Samuel Nittbaur" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,0,0,10"></Label>
    </StackLayout>
   

</ContentPage>
